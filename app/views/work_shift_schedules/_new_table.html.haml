%td
  = f.text_field :to, value: params[:to], class: "datepicker width175", placeholder: "To"
  %br
  %br
  = f.text_field :from, value: params[:from], class: "datepicker width175", placeholder: "From"
  %br
  %br
  = f.text_field :week_number, value: params[:week_number], placeholder: "Week", class: "width175"
  %br
  %br
  = f.select :user_id, User.all.map { |r| [r[:first_name] + " " + r[:last_name], r.id]  }, { selected: params[:user_id] }, { class: "form-select width250", style: "height: 60px; " }
