:css
  :sass
    h6 {
      /*font-size: 24px;*/
      color: $global-color-text;;
      text-transform: uppercase;
      font-weight: 300;
      text-align: center;
      margin-bottom: 15px;
    }

    .table {
      width:100%;
      min-width: 1270px;
      table-layout: fixed;
      overflow: hidden;
    }

    table.table-new-user-form {
      width:100%;
      min-width: 600px;
      table-layout: fixed;
      overflow: hidden;
    }

    .tbl-header {
      background-color: rgba(255,255,255,0.3);
    }

    .tbl-content{
      height:300px;
      overflow-x:auto;
      margin-top: 0px;
      /*border: 1px solid rgba(255,255,255,0.3);*/
    }

    .tbl-content-form {
      height: 90vh;
      overflow-x:auto;
      margin-top: 0px;
      /*border: 1px solid rgba(255,255,255,0.3);*/
    }

    th {
      padding: 7px 15px;
      text-align: left;
      font-weight: 500;
      font-size: 10px;
      color: $global-color-text;;
      text-transform: uppercase;
    }

    td, tr {
      padding: 15px;
      text-align: left;
      vertical-align:middle;
      font-weight: 400;
      font-size: 10px;
      color: $global-color-text;
      /*border: 1px solid;*/
        background: $global-color-background;

    }

    tr {
      &:hover {
        background-color: #2C3446;
      }
    }

    td {
      &:hover {
        background-color: #2C3446;
      }
    }

    td:hover, td:focus {
      outline: none;
    }

    section{
      margin: 5px;
    }


    /* follow me template */
    .made-with-love {
      clear: left;
      text-align: center;
      font-size: 10px;
      font-family: arial;
      color: #fff;
    }

    .made-with-love i {
      font-style: normal;
      color: #F50057;
      font-size: 14px;
      position: relative;
      top: 2px;
    }
    .made-with-love a {
      color: #fff;
      text-decoration: none;
    }
    .made-with-love a:hover {
      text-decoration: underline;
    }

    /* for custom scrollbar for webkit browser*/

    ::-webkit-scrollbar {
      width: 6px;
    }
    ::-webkit-scrollbar-track {
      -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3);
    }
    ::-webkit-scrollbar-thumb {
      -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3);
    }
