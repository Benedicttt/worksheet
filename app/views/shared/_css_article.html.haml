:css
  :sass
    h3 {
      font-size: 24px;
      color: #fff;
      text-transform: uppercase;
      font-weight: 300;
      text-align: center;
      margin-bottom: 15px;
    }

    .table {
      width:100%;
      min-width: 1215px;
      table-layout: fixed;
      overflow: hidden;
    }

    table.table-new-user-form {
      width:100%;
      min-width: 600px;
      table-layout: fixed;
      overflow: hidden;
    }

    .tbl-header {
      background-color: rgba(255,255,255,0.3);
    }

    .tbl-content{
      height:300px;
      overflow-x:auto;
      margin-top: 0px;
      /*border: 1px solid rgba(255,255,255,0.3);*/
    }

    .tbl-content-form {
      height: 55vh;
      overflow-x:auto;
      margin-top: 0px;
      /*border: 1px solid rgba(255,255,255,0.3);*/
    }

    th {
      padding: 7px 15px;
      text-align: left;
      font-weight: 500;
      font-size: 10px;
      color: #fff;
      text-transform: uppercase;
    }

    td, tr {
      padding: 15px;
      text-align: left;
      vertical-align:middle;
      font-weight: 400;
      font-size: 10px;
      color: #fff;
      /*border: 1px solid;*/
    }

    tr {
      &:hover {
        background-color: #2C3446;
      }
    }

    td {
      &:hover {
        background-color: #2C3446;
      }
    }

    td:hover, td:focus {
      outline: none;
    }

    article, footer, aside{
      /*background: -webkit-linear-gradient(left, #54565f, #868893);*/
      /*background: linear-gradient(to right, #54565f, #868893);*/
      /*font-family: 'Roboto', sans-serif;*/
    }

    section{
      margin: 50px;
    }


    /* follow me template */
    .made-with-love {
      clear: left;
      text-align: center;
      font-size: 10px;
      font-family: arial;
      color: #fff;
    }

    .made-with-love i {
      font-style: normal;
      color: #F50057;
      font-size: 14px;
      position: relative;
      top: 2px;
    }
    .made-with-love a {
      color: #fff;
      text-decoration: none;
    }
    .made-with-love a:hover {
      text-decoration: underline;
    }

    /* for custom scrollbar for webkit browser*/

    ::-webkit-scrollbar {
      width: 6px;
    }
    ::-webkit-scrollbar-track {
      -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3);
    }
    ::-webkit-scrollbar-thumb {
      -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3);
    }

    tbody td:hover {
      background-color: #2C3446;
      color: #000000;
      font-weight: bold;
      border-radius: 60px;
        transform: scale(1) translate(-1%, -1%);
        transition-delay: 0.1s;
        transition-duration: 0.4s;
        transition-property: all;
    }
